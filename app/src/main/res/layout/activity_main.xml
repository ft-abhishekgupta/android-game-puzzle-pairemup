<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abhishekgupta.pairthemup.MainActivity"
    android:padding="0dp"
    android:background="@drawable/background_home">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:weightSum="3"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#55000000">

        <Button
            android:text="Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            android:background="#55000000"
            android:textColor="#dddddd"
            android:textSize="16sp"
            android:onClick="easyg" />

        <Button
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button41"
            android:layout_weight="1"
            android:background="#55000000"
            android:textColor="#dddddd"
            android:textSize="16sp"
            android:onClick="normalg"/>

        <Button
            android:text="Hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button42"
            android:layout_weight="1"
            android:background="#55000000"
            android:textColor="#dddddd"
            android:textSize="16sp"
            android:onClick="hardg"/>
            
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:weightSum="5">

        <Button
            android:text="How To Play!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button43"
            android:textColor="#dddddd"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:padding="0dp"
            android:onClick="mhow"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:background="#00000000" />

        <Button
            android:text="Highscores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/button46"
            android:textColor="#dddddd"

            android:onClick="highm"
            android:layout_weight="1"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:background="#00000000" />

        <Button
            android:text="Rate App"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/button44"
            android:onClick="mrate"
            android:textColor="#dddddd"
            android:layout_weight="1"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:background="#00000000" />
        <Button
            android:text="Share App"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/button50"
            android:onClick="mshare"
            android:textColor="#dddddd"
            android:layout_weight="1"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:background="#00000000" />

        <Button
            android:text="Developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/button45"
            android:textColor="#dddddd"
            android:onClick="mdev"
            android:layout_weight="1"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:background="#00000000" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifTextView
        android:background="@drawable/logogif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="PLAY"
        android:layout_width="match_parent"
        android:textColor="#dddddd"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textStyle="normal|bold|italic"
        android:gravity="center_horizontal"
        android:background="#55000000"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/back"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView5"
        android:onClick="mback" />

</RelativeLayout>
