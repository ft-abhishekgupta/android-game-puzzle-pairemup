<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_high"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_highscore"
    tools:context="com.abhishekgupta.pairthemup.high">

    <TextView
        android:text="Minimum Time Taken -"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textStyle="normal|bold|italic"
        android:textColor="#dddddd"
        android:textSize="22sp" />

    <TextView
        android:text="Easy -"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#dddddd"
        android:textSize="19sp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#33999999" />

    <TextView
        android:text="Normal -"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#dddddd"
        android:textSize="19sp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#33999999" />" />

    <TextView
        android:text="Hard -"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="#dddddd"
        android:textSize="19sp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#33999999" />

    <pl.droidsonroids.gif.GifTextView
        android:background="@drawable/highscore"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"
        android:layout_marginBottom="5dp" />
        
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView5"
        android:onClick="mback" />
</RelativeLayout>
